# Server environment variables
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# Server port (default: 3001)
PORT=3001

# Node environment: development | production | test
NODE_ENV=development

# Prisma / SQLite database path
# Path is resolved from the Prisma schema folder: /server/prisma
DATABASE_URL="file:./dev.db"

# Allowed CORS origin(s) â€” comma-separated if multiple
CORS_ORIGIN=http://localhost:5173

# JWT configuration
JWT_SECRET=change-me-in-production
JWT_EXPIRES_IN=12h

# Seed credentials for demo users
SEED_ADMIN_EMAIL=admin@mini-task.local
SEED_ADMIN_PASSWORD=Admin123!
SEED_USER_EMAIL=user@mini-task.local
SEED_USER_PASSWORD=User123!
